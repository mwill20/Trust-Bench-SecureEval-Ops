# Trust Bench SecureEval + Ops Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM Provider Configuration (at least one required for chat features)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-key-here
# Example: sk-proj-abc123...

# Groq Configuration (optional alternative)
# GROQ_API_KEY=your-groq-key-here

# Gemini Configuration (optional alternative)
# GEMINI_API_KEY=your-gemini-key-here

# Default LLM provider to use (openai, groq, or gemini)
LLM_PROVIDER=openai

# ============================================================================
# Security & Safety Configuration
# ============================================================================

# Enable security input validation and prompt filtering (true/false)
ENABLE_SECURITY_FILTERS=true

# ============================================================================
# Repository Analysis Configuration
# ============================================================================

# Maximum number of files to scan per repository
TB_MAX_FILES=2000

# Maximum file size to scan (in MB)
TB_MAX_FILE_SIZE_MB=2

# Repository clone timeout (in seconds)
TB_CLONE_TIMEOUT=120

# ============================================================================
# Application Runtime Configuration
# ============================================================================

# Runtime mode (dev = verbose logging, strict = production mode)
TB_RUN_MODE=dev

# Web interface port (default: 5001)
WEB_PORT=5001

# Enable debug mode (true/false - set to false in production)
FLASK_DEBUG=false

# ============================================================================
# Resilience & Performance Configuration
# ============================================================================

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Retry backoff delay in seconds (exponential backoff starting point)
RETRY_BACKOFF_SECONDS=0.5

# Global timeout for agent operations (in seconds)
AGENT_TIMEOUT_SECONDS=120

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format (json for structured logging, text for human-readable)
LOG_FORMAT=json
